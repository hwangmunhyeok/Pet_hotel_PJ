  <!--다중 이미지 추가 SQL문 --> 
  
  <insert id="insertNewReview"  parameterType="java.util.Map">
    <![CDATA[
      insert into tb_review(review_num, user_id, review_title, review_Date, review_rec,review_star,RESERVATION_NUM)
      values(#{reviewNO}, #{id}, #{title}, sysdate, #{rec},#{star}, #{res_num})
    ]]>      
  </insert>
  
