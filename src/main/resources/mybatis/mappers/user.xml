<!--  회원가입 회원 저장 -->
   	<insert id="insertNewUser" parameterType="userVO">
   		<![CDATA[
    		insert into TB_USER(USER_ID, USER_PW, USER_NAME, USER_EMAIL,
	      USER_TEL, USER_TEL_SUB, USER_MESSAGE,USER_BIRTH) 
    		values(#{id},#{pw},#{name},#{email},#{tel},#{tel_sub},#{message},#{birth}) 
    	]]> 
   	</insert>
   
