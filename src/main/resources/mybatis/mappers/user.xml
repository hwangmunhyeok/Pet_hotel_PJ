 	<update id="updateUser" parameterType="userVO">
   		<![CDATA[
   			 update TB_USER
	     	 set user_pw= #{pw}, user_email=#{email}, user_tel=#{tel}, user_tel_sub=#{tel_sub},
	     	 user_message=#{message}, USER_BIRTH=#{birth}
	    	 where user_id=#{id}
   		]]>
